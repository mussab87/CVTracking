@model UserClaimsDto

<form asp-controller="RootCompany" asp-action="" method="post">
    <div class="modal fade" id="addPermission" tabindex="-1" data-backdrop="false">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <b class="modal-title" id="addRoleLabel">Add Permissions to User</b>
                    @* <button type="button" class="close" data-bs-dismiss="modal">
                    <span>X</span>
                    </button>*@
                </div>

                <div class="modal-body" style="overflow-y: scroll;max-height: 500px;">
                    <input type="hidden" asp-for="@Model.UserId" />
                    <div class="form-group">
                        @for (int i = 0; i < Model.Cliams.Count; i++)
                        {

                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model.Cliams[i].ClaimType" />

                                <input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" style="margin-right:20px !important" asp-for="@Model.Cliams[i].IsSelected">
                                    @Model.Cliams[i].ClaimType
                                </label>
                            </div>

                        }
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>

                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" name="submit" asp-action="ManageUserPermission" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
