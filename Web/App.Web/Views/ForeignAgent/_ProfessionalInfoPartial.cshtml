@model AddAddNewForeignCvRequest
<div class="tab-pane fade" id="professional" role="tabpanel" aria-labelledby="professional-tab">
    <div class="edit-profile-form profile-form">

        <div class="section-title2">
            <h5>Employment Information:</h5>
        </div>

        @if (Model.previousEmployment is not null && Model.previousEmployment.Count > 0)
        {
            <input type="hidden" id="countExpList" value="@Model.previousEmployment.Count">
            <div class="experiences-row">
                @for (int i = 0; i < Model.previousEmployment.Count; i++)
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="info-title">
                                @*<h6>Add Candidate Previous Employment </h6>*@
                                <div class="dash"></div>
                            </div>
                        </div>
                        <input type="hidden" id="countExpList" asp-for="@Model.previousEmployment[i].Id" value="@Model.previousEmployment[i].Id">
                        <div class="col-md-6">
                            <div class="form-inner mb-25">
                                <label>Period</label>
                                <div class="input-area">
                                    <img src="~/assets/images/icon/hight.svg" alt="">
                                    <input type="text" asp-for="@Model.previousEmployment[i].Period" placeholder="Period'" required title="Please enter your this Field">
                                </div>
                            </div>
                        </div>
                        <input type="hidden" id="countrylist" name="countrylist" value="@ViewBag.Country" />
                        <div class="col-md-6">
                            <div class="form-inner mb-25">
                                <label>Country Of Employment</label>
                                <div class="input-area">
                                    <img src="~/assets/images/icon/nid.svg" alt="">
                                    <select asp-for="@Model.previousEmployment[i].CountryOfEmploymentId" class="select2"
                                            asp-items="@ViewBag.Countries" required title="Please enter your this Field">
                                        <option value="">Select Country of Employment </option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-inner mb-25">
                                <label>Position</label>
                                <div class="input-area">
                                    <img src="~/assets/images/icon/designation-2.svg" alt="">
                                    <input type="text" asp-for="@Model.previousEmployment[i].Position" placeholder="Position" required title="Please enter your this Field">

                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="experiences-row">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="info-title">
                            <h6>Add Candidate Previous Employment </h6>
                            <div class="dash"></div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-inner mb-25">
                            <label>Period</label>
                            <div class="input-area">
                                <img src="~/assets/images/icon/hight.svg" alt="">
                                <input type="text" asp-for="previousEmployment[0].Period" placeholder="Period" required title="Please enter your this Field">
                            </div>
                        </div>
                    </div>
                    <input type="hidden" id="countrylist" name="countrylist" value="@ViewBag.Country" />
                    <div class="col-md-6">
                        <div class="form-inner mb-25">
                            <label>Country Of Employment</label>
                            <div class="input-area">
                                <img src="~/assets/images/icon/nid.svg" alt="">
                                <select asp-for="previousEmployment[0].CountryOfEmploymentId" class="select2"
                                        asp-items="@ViewBag.Countries" required title="Please enter your this Field">
                                    <option value="">Select Country of Employment </option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-inner mb-25">
                            <label>Position</label>
                            <div class="input-area">
                                <img src="~/assets/images/icon/designation-2.svg" alt="">
                                <input type="text" asp-for="previousEmployment[0].Position" placeholder="Position" required title="Please enter your this Field">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="add-remove-btn d-flex align-items-center justify-content-between mb-50">
            <div class="add-row">
                <button type="button" class="add-experiences-row">Add New+ </button>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-inner">
                <button class="primry-btn-2 lg-btn w-unset" type="submit">Save Changes</button>
            </div>
        </div>
    </div>
</div>