            NToast(
                "#1ea244",
                "tl",
                "Data has been Deleted Permanently",
                true,
                "fa fa-trash",
                true,
                100,
            )
        }
        if (Message == 4) {
            NToast(
                "#e4483d",
                "tl",
                "Can't deleted, users assigned!",
                true,
                "fa fa-info",
                true,
                100,
            )
        }
        if (Message == 5) {
            NToast(
                "#e4483d",
                "tl",
                "error occurred while processing data.",
                true,
                "fa e-fe-access-error",
                true,
                100,
            )
        }
        if (Message == 6) {
            NToast(
                "#D74323",
                "tl",
                "هذا الموظف موجود مسبقا",
                true,
                "fa e-fe-access-error",
                true,
                100,
            )
        }
        if (Message == 8) {
            NToast(
                "#D74323",
                "tl",
                "Sorry user Deactivated",
                true,
                "fa e-fe-access-error",
                true,
                100,
            )
        }
        if (Message == 9) {
            NToast(
                "#D74323",
                "tl",
                "Username/password not correct",
                true,
                "fa e-fe-access-error",
                true,
                100,
            )
        }
    }

