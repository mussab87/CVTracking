<!-- ========== Inner Banner Start============= -->
@{
    string controller = null;
    if (signInManager.IsSignedIn(User) && signInManager.Context.User.IsInRole(Roles.SuperAdmin))
    {
        controller = "SuperAdmin";
    }
    if (signInManager.IsSignedIn(User) && signInManager.Context.User.IsInRole(Roles.Admin))
    {
        controller = "RootCompany";
    }

}
<div class="inner-banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="banner-content text-center">
                    <h1>@ViewBag.Title</h1>
                    <span></span>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a asp-controller=@controller asp-action="Index">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ========== Inner Banner end============= -->