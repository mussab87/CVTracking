@model AddUserToRootCompanyRequest



@{
    ViewBag.Title = "Add User to Root Company";
}

<partial name="PageBannerStartPartialView" />
<!-- ========== Login Area end============= -->
<div class="job-post-area pt-120 mb-120">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-wrapper">
                    <form asp-action="AddUserToRootCompany" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="section-title2">
                                    <h5>Add @Model.applicationUser.FirstName @Model.applicationUser.LastName to Root Company :</h5>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-inner mb-25">
                                    <label asp-for="RootCompanyId"></label>
                                    <div class="input-area">
                                        <input type="hidden" asp-for="ApplicationUserId" />
                                        <img src="~/assets/images/icon/user-2.svg" alt="">
                                        <select asp-for="RootCompanyId" class="select1" asp-items="@ViewBag.RootCompany">
                                            <option value="0">Select Root Company</option>
                                        </select>
                                    </div>
                                    <span asp-validation-for="RootCompanyId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-inner">
                                    <button class="primry-btn-2 lg-btn w-unset" type="submit" title="Save">Save New Role</button>
                                    |
                                    <a asp-action="ListUsers" class="btn bg-warning waves-effect" type="button" title="Back">
                                        Back
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ========== Login Area end============= -->
