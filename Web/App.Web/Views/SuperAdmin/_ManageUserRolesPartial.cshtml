@model List<UserRolesDto>

<form asp-controller="SuperAdmin" asp-action="" method="post">
    <div class="modal fadeIn" id="addRole" tabindex="-1" data-backdrop="false">
        <div class="modal-dialog" style="width:600px;">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title" id="addRoleLabel">Add Roles to User</h4>
                    @* <button type="button" class="close" data-bs-dismiss="modal">
                    <span>X</span>
                    </button>*@
                </div>

                <div class="modal-body">

                    <div class="form-group">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-check m-1">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input type="hidden" asp-for="@Model[i].UserId" />
                                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                                <label class="form-check-label" style="margin-right:20px !important" asp-for="@Model[i].IsSelected">
                                    @Model[i].RoleName
                                </label>
                            </div>
                        }
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>

                </div>

                <div class="modal-footer">

                    <button type="button" class="btn btn-default" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" name="submit" asp-action="ManageUserRoles" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>
</form>
