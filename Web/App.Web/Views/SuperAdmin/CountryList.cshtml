                    @if (Model.Any())
                    {
                        <table class="eg-table table job-list-table mb-0" id="tbl">
                            <thead>
                                <tr>
                                    <th hidden>
                                        Id
                                    </th>
                                    <th>#</th>
                                    <th>
                                        Country Name English
                                    </th>
                                    <th>
                                        Country Name Arabic
                                    </th>
                                    <th>Status</th>
                                    
                                    <th>Manage</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var company in Model)
                                {
                                    i++;
                                    <tr>
                                        <td hidden>@company.Id</td>
                                        <td>@i</td>
                                        <td>
                                            @company.NameEnglish
                                        </td>
                                        <td>
                                            @company.NameArabic
                                        </td>
                                        
                                        <td>
                                            @if (company.Status == true)
                                            {
                                                <text>Active</text>
                                            }


                                            @if (company.Status == false)
                                            {
                                                <text>InActive</text>
                                            }

                                        </td>
                                        <td>
                                            <form method="post" asp-controller="SuperAdmin" asp-action="DeleteCountry" asp-route-id="@company.Id">

                                                <a asp-action="EditCompany" asp-controller="SuperAdmin"
                                                   asp-route-id="@company.Id" class="btn btn-info text-white" style="cursor:pointer">
                                                    <i class="bi bi-pencil-square"></i>
                                                </a>

                                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete? : @company.NameEnglish')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
